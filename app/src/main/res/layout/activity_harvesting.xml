<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Harvesting">

    <LinearLayout
        android:id="@+id/Greece"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5">

        <ImageView
            android:id="@+id/imageGreece"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/greece"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Olives"
            android:textAlignment="center" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Fig"
            android:textAlignment="center" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Peaches"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Spain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:orientation="vertical"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        >

        <ImageView
            android:id="@+id/imageSpain"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/spain"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Tomato"
            android:textAlignment="center" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Grapes"
            android:textAlignment="center" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Peaches"
            android:textAlignment="center" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Italy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="380dp"
        android:orientation="vertical"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        >

        <ImageView
            android:id="@+id/imageItaly"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/italy"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Olives"
            android:textAlignment="center" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Grapes"
            android:textAlignment="center" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Orange"
            android:textAlignment="center" />


    </LinearLayout>

    <Button
        android:id="@+id/button_start"
        android:layout_width="133dp"
        android:textSize="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/style_btn_stroke_black95_white"
        android:layout_height="wrap_content"
        android:text="@string/Start"
        app:layout_anchor="@+id/Greece"
        app:layout_anchorGravity="bottom|center" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>